<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/public/stylesheets/index.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/public/javascripts/index.js"></script>
    <title>CapChat</title>
</head>
<body>
<div class="cadre">
    <div class="checkBox" onclick="showPopUp()"></div>
    <div class="text">
        <p id="res">Je ne suis pas un robot</p>
    </div>
</div>

<div id="card" class="card hidden">
    <div class="header">
        <p>Selectionne une image qui correspond a :</p>
        <p id="indice"><%= indice %></p>
    </div>
    <div class="body">
        <% use_image.forEach( (image) => {%>
            <img src="<%= image.url%>" data-id="<%= image.id%>">
        <%})%>

    </div>
    <div class="footer">
        <img src="/public/images/asset/redo-solid.svg" style="width: 35px;height: 35px">
        <div class="chrono">
            <p id="timer">30</p>
        </div>
        <button class="button" onclick="verify()">VERIFIER</button>
    </div>
</div>

</body>
</html>